{
    "name": "promised-sqlite3",
    "version": "1.0.0",
    "description": "A wrapper arround sqlite3 node.js package to use promise",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "tsc",
        "clean": "rm -rf ./dist",
        "rebuild": "npm run clean && npm run build",
        "prestart": "npm run build",
